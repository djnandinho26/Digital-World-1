<Window x:Class="Digital_World.Forms.DatabaseConfigForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuração do Banco de Dados" 
        Height="350" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Erro ao conectar com o banco de dados" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="#D32F2F"
                   Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" 
                   Text="Configure as informações de conexão:" 
                   Margin="0,0,0,15"/>

        <!-- Campos de configuração -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <!-- Host -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Host:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" 
                     x:Name="txtHost" 
                     VerticalAlignment="Center" 
                     Padding="5"
                     Text="localhost"/>

            <!-- Username -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Usuário:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     x:Name="txtUsername" 
                     VerticalAlignment="Center" 
                     Padding="5"
                     Text="root"/>

            <!-- Password -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Senha:" VerticalAlignment="Center"/>
            <PasswordBox Grid.Row="2" Grid.Column="1" 
                         x:Name="txtPassword" 
                         VerticalAlignment="Center" 
                         Padding="5"/>

            <!-- Database -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Banco de Dados:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" 
                     x:Name="txtDatabase" 
                     VerticalAlignment="Center" 
                     Padding="5"
                     Text="digitalworld"/>
        </Grid>

        <!-- Status da conexão -->
        <TextBlock Grid.Row="3" 
                   x:Name="txtStatus" 
                   Margin="0,15,0,0"
                   TextWrapping="Wrap"
                   Foreground="#666"/>

        <!-- Botões -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="btnTest" 
                    Content="Testar Conexão" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="BtnTest_Click"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="btnSave" 
                    Content="Salvar e Conectar" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="BtnSave_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsEnabled="False"/>
            <Button x:Name="btnCancel" 
                    Content="Cancelar" 
                    Width="80" 
                    Height="30"
                    Click="BtnCancel_Click"
                    Background="#9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
