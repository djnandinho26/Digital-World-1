<Window x:Class="Digital_World.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opções" Height="680" Width="420" ResizeMode="NoResize">
    <Grid Margin="10">
        <Button Content="Cancelar" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnCancel" VerticalAlignment="Bottom" Width="75" IsCancel="True" Click="btnCancel_Click" />
        <Button Content="OK" Height="23" HorizontalAlignment="Right" Margin="0,0,93,12" Name="btnOK" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="btnOK_Click" />
        
        <ScrollViewer Margin="0,0,0,45" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
            <GroupBox Header="Configurações do Servidor" Margin="0,0,0,10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="Host" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" Name="tHost" Text="127.0.0.1" Margin="5,2" />
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="Porta" VerticalAlignment="Center" />
                    <TextBox Grid.Row="1" Grid.Column="1" Name="tPort" Text="6999" Margin="5,2" />
                    
                    <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Iniciar Automaticamente" Name="chkStart" Margin="5,5,0,0" />
                </Grid>
            </GroupBox>
            
            <GroupBox Header="Configurações do Banco de Dados" Margin="0,0,0,10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="Host" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" Name="tDBHost" Margin="5,2" />
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="Usuário" VerticalAlignment="Center" />
                    <TextBox Grid.Row="1" Grid.Column="1" Name="tDBUser" Margin="5,2" />
                    
                    <Label Grid.Row="2" Grid.Column="0" Content="Senha" VerticalAlignment="Center" />
                    <PasswordBox Grid.Row="2" Grid.Column="1" Name="tDBPass" Margin="5,2" />
                    
                    <Label Grid.Row="3" Grid.Column="0" Content="Esquema" VerticalAlignment="Center" />
                    <TextBox Grid.Row="3" Grid.Column="1" Name="tDBSchema" Margin="5,2" />
                </Grid>
            </GroupBox>
            
            <GroupBox Header="Configurações do Servidor HTTP" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Habilitar Servidor HTTP" Name="chkHttpEnabled" Margin="5,2" />
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="Porta HTTP" VerticalAlignment="Center" />
                    <TextBox Grid.Row="1" Grid.Column="1" Name="tHttpPort" Text="8080" Margin="5,2" />
                    
                    <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Habilitar HTTPS" Name="chkHttpsEnabled" Margin="5,2" />
                    
                    <Label Grid.Row="3" Grid.Column="0" Content="Porta HTTPS" VerticalAlignment="Center" />
                    <TextBox Grid.Row="3" Grid.Column="1" Name="tHttpsPort" Text="8443" Margin="5,2" />
                    
                    <Label Grid.Row="4" Grid.Column="0" Content="Caminho Patch" VerticalAlignment="Center" />
                    <TextBox Grid.Row="4" Grid.Column="1" Name="tPatchPath" Text="C:\DMOServer\HttpServer\www" Margin="5,2" />
                    
                    <Label Grid.Row="5" Grid.Column="0" Content="Tipo de Certificado" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="5" Grid.Column="1" Name="cbCertType" Margin="5,2" SelectedIndex="0">
                        <ComboBoxItem Content="Auto-gerado (Self-signed)"/>
                        <ComboBoxItem Content="ZeroSSL (Certificado CA)"/>
                    </ComboBox>
                </Grid>
            </GroupBox>
            
            <GroupBox Header="Configurações do Servidor FTP (Somente Envio)" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Habilitar Servidor FTP" Name="chkFtpEnabled" Margin="5,2" />
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="Porta FTP" VerticalAlignment="Center" />
                    <TextBox Grid.Row="1" Grid.Column="1" Name="tFtpPort" Text="21" Margin="5,2" />
                    
                    <Label Grid.Row="2" Grid.Column="0" Content="Caminho de Envio" VerticalAlignment="Center" />
                    <TextBox Grid.Row="2" Grid.Column="1" Name="tFtpUploadPath" Text="C:\DMOServer\HashResulLogs" Margin="5,2" />
                    
                    <Label Grid.Row="3" Grid.Column="0" Content="Usuário" VerticalAlignment="Center" />
                    <TextBox Grid.Row="3" Grid.Column="1" Name="tFtpUsername" Text="upload" Margin="5,2" />
                    
                    <Label Grid.Row="4" Grid.Column="0" Content="Senha" VerticalAlignment="Center" />
                    <PasswordBox Grid.Row="4" Grid.Column="1" Name="tFtpPassword" Margin="5,2" />
                </Grid>
            </GroupBox>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
