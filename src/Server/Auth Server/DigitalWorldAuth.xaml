<Window x:Class="Digital_World.AuthMainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Digital World Auth Server" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu -->
        <Menu Grid.Row="0" Height="23">
            <MenuItem Header="Opções" Name="mi_opt" Click="mi_opt_Click" />
        </Menu>
        
        <!-- Área de Logs -->
        <Grid Grid.Row="1" Margin="12,6,12,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Log do Servidor de Autenticação -->
            <GroupBox Grid.Column="0" Header="Log - Servidor de Autenticação" Padding="5">
                <TextBox Name="tLogAuth" 
                         HorizontalScrollBarVisibility="Auto" 
                         VerticalScrollBarVisibility="Visible" 
                         FontFamily="Lucida Console" 
                         FontSize="10"
                         IsReadOnly="True" 
                         Background="#1E1E1E"
                         Foreground="#D4D4D4"/>
            </GroupBox>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#3F3F46"/>
            
            <!-- Log HTTP/HTTPS e FTP -->
            <GroupBox Grid.Column="2" Header="Log - HTTP/HTTPS e FTP" Padding="5">
                <TextBox Name="tLogWeb" 
                         HorizontalScrollBarVisibility="Auto" 
                         VerticalScrollBarVisibility="Visible" 
                         FontFamily="Lucida Console" 
                         FontSize="10"
                         IsReadOnly="True" 
                         Background="#1E1E1E"
                         Foreground="#D4D4D4"/>
            </GroupBox>
        </Grid>
        
        <!-- Botões -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,12,41">
            <Button Content="Iniciar" Height="28" Width="90" Margin="0,0,10,0" Name="btnListen" Click="btnStart_Click" />
            <Button Content="Parar" Height="28" Width="90" Name="btnStop" Click="btnStop_Click" />
        </StackPanel>
        
        <!-- StatusBar com controle de criptografia -->
        <StatusBar Grid.Row="2" Height="29" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock Text="Auth Server" />
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Name="chkEncryption" 
                              Content="Criptografia" 
                              IsChecked="True"
                              Checked="chkEncryption_Changed"
                              Unchecked="chkEncryption_Changed"
                              Margin="0,0,5,0"/>
                    <TextBlock Name="txtEncryptionStatus" 
                               Text="ATIVA" 
                               Foreground="LimeGreen"
                               FontWeight="Bold"
                               Margin="5,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="TCP:" Margin="0,0,5,0"/>
                    <Ellipse Name="statusTcp" Width="12" Height="12" Fill="Red" Margin="0,0,10,0"/>
                    <TextBlock Text="HTTP:" Margin="0,0,5,0"/>
                    <Ellipse Name="statusHttp" Width="12" Height="12" Fill="Red" Margin="0,0,10,0"/>
                    <TextBlock Text="HTTPS:" Margin="0,0,5,0"/>
                    <Ellipse Name="statusHttps" Width="12" Height="12" Fill="Red" Margin="0,0,10,0"/>
                    <TextBlock Text="FTP:" Margin="0,0,5,0"/>
                    <Ellipse Name="statusFtp" Width="12" Height="12" Fill="Red" Margin="0,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
